<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
   		xmlns="http://java.sun.com/xml/ns/persistence" 
   		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
         http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
        
        <persistence-unit name="crudJavaPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <properties>
            <!-- CONEXAO COM O BANCO DE DADOS -->                       
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" /> <!-- DB Dialect -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" /> <!-- DB Driver -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bdproduto" /> <!-- BD Name -->
            <property name="javax.persistence.jdbc.user" value="root" /> <!-- DB User -->
            <property name="javax.persistence.jdbc.password" value="root" /> <!-- DB Password -->

            <property name="hibernate.hbm2ddl.auto" value="update" /> <!-- create / create-drop / update -->
             <property name="hibernate.show_sql" value="true" /> <!-- Show SQL in console -->
            <property name="hibernate.format_sql" value="true" /> <!-- Show SQL formatted -->
        </properties>
    </persistence-unit>
</persistence>